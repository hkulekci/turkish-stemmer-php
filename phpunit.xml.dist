<phpunit bootstrap="./test/bootstrap.php"
         stopOnError="true"
         stopOnFailure="true"
         processIsolation="true"
         backupGlobals="false"
         backupStaticAttributes="false"
         verbose="true"
         colors="true">
    <testsuites>
        <testsuite name="TurkishStemmerTest"><directory>./test/TurkishStemmerTest/</directory></testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">src</directory>
            <exclude>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
